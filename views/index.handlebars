<div class="container">
    <section id="page-name">
        <h1>Eat-Da-Burger</h1>
        <img src="assets/img/burger.jpg" alt="vegBurg" width="200" height="200">
    </section>

    <section class="row">
        <div class="burgz">
            <table>
                {{#each burgers}}
                {{#unless this.devoured}}
                <form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <div class="form-group">
                        <ul>
                            <li>
                                <button type="submit" name="devoured" value="1">{{burger_name}}</button>
                            </li>
                        </ul>
                    </div>
                </form>
                {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}}
            {{#if this.devoured}}
            <div>
                <ul>
                    <li>
                        <button>{{burger_name}}</button>
                    </li>
                </ul>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </section>
    <form action="/burgers/create" method="POST">
        <div class="newBurgz">
            <input type="text" name="burger_name" class="form-control text-center" maxlength="50"
                placeholder="What kinda burger next?">
            <button type="submit">Order Up!!</button>
        </div>
    </form>
</div>